<div class="dashboard-container">
  <h1>Cashly Dashboard</h1>

  <div class="dashboard-summary">
    <div class="summary-card">
      <h3>Current Balance</h3>
      <p class="balance <%= @total_balance.to_f >= 0 ? "positive" : "negative" %>">
        <%= number_to_currency(@total_balance || 0) %>
      </p>
    </div>

    <div class="summary-card">
      <h3>Monthly Income</h3>
      <p class="income">
        <%= number_to_currency(@monthly_income || 0) %>
      </p>
    </div>

    <div class="summary-card">
      <h3>Monthly Expenses</h3>
      <p class="expenses">
        <%= number_to_currency(@monthly_expenses || 0) %>
      </p>
    </div>
  </div>

  <div class="dashboard-charts row">
    <div class="col-md-8">
      <div class="chart-container">
        <h3>Cash Flow Forecast</h3>
        <div id="cash-flow-chart"></div>
      </div>
    </div>

    <div class="dashboard-charts row">
      <div class="col-md-8">
        <div class="chart-container">
          <h3>Cash Flow Forecast</h3>
          <div id="cash-flow-chart"></div>
        </div>
      </div>

      <div class="dashboard-insights">
        <h3>AI Insights</h3>
        <div class="insights-container">
          <% if @insights.present? %>
            <% @insights.each do |insight| %>
              <div class="insight-card <%= insight['type'] %>">
                <h4><%= insight['title'] %></h4>
                <p><%= insight['description'] %></p>
              </div>
            <% end %>
          <% else %>
            <p>Start adding your transactions to get personalized financial insights!</p>
          <% end %>
        </div>
      </div>

      <div class="dashboard-actions">
        <h3>Quick Actions</h3>
        <div class="action-buttons">
          <%= link_to "Add Transaction", new_transaction_path, class: "btn btn-primary" %>
          <%= link_to "View Transactions", transactions_path, class: "btn btn-secondary" %>
          <%= link_to "View Budget", budgets_path, class: "btn btn-secondary" %>
          <%= link_to "View Cash Flow Forecast", ai_forecast_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
</div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
      document.getElementById('cash-flow-chart').innerHTML =
          '<p class="placeholder-text">Cash flow chat will appear here</p>';

      document.getElementById('expense-chart').innerHTML =
          '<p class="placeholder-text">Expense breakdown chart will appear here</p>';
  });
</script>

