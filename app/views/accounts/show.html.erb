<!-- app/views/accounts/show.html.erb -->
<div class="account-details">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @account.name %> <span class="badge <%= @account.balance.to_f >= 0 ? 'bg-success' : 'bg-danger' %>"><%= @account.account_type %></span></h1>
    <div>
      <%= link_to "Edit Account", edit_account_path(@account), class: "btn btn-outline-primary" %>
      <%= link_to "Back to Accounts", accounts_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-header">
          <h5>Current Balance</h5>
        </div>
        <div class="card-body d-flex flex-column justify-content-center">
          <h2 class="text-center <%= @balance.to_f >= 0 ? 'text-success' : 'text-danger' %>">
            <%= number_to_currency(@balance) %>
          </h2>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card h-100">
        <div class="card-header">
          <h5>This Month's Activity</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 text-center">
              <p class="text-muted mb-1">Income</p>
              <h4 class="text-success"><%= number_to_currency(@month_income) %></h4>
            </div>
            <div class="col-md-4 text-center">
              <p class="text-muted mb-1">Expenses</p>
              <h4 class="text-danger"><%= number_to_currency(@month_expenses) %></h4>
            </div>
            <div class="col-md-4 text-center">
              <p class="text-muted mb-1">Net</p>
              <h4 class="<%= @month_net >= 0 ? 'text-success' : 'text-danger' %>">
                <%= number_to_currency(@month_net) %>
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Account Information</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-4">Account Type:</dt>
            <dd class="col-sm-8"><%= @account.account_type.presence || 'Not specified' %></dd>

            <dt class="col-sm-4">Institution:</dt>
            <dd class="col-sm-8"><%= @account.institution.presence || 'Not specified' %></dd>
          </dl>
        </div>
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-4">Last Synced:</dt>
            <dd class="col-sm-8"><%= @account.last_synced&.strftime('%Y-%m-%d %H:%M') || 'Never' %></dd>

            <dt class="col-sm-4">Created on:</dt>
            <dd class="col-sm-8"><%= @account.created_at.strftime('%Y-%m-%d') %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Recent Transactions</h5>
      <%= link_to "View All", transactions_path(account_id: @account.id), class: "btn btn-sm btn-outline-primary" %>
    </div>
    <div class="card-body">
      <% if @recent_transactions.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Category</th>
              <th>Amount</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @recent_transactions.each do |transaction| %>
              <tr>
                <td><%= transaction.date.strftime('%Y-%m-%d') %></td>
                <td><%= transaction.description %></td>
                <td><%= transaction.category&.name || 'Uncategorized' %></td>
                <td class="<%= transaction.amount >= 0 ? 'text-success' : 'text-danger' %>">
                  <%= number_to_currency(transaction.amount) %>
                </td>
                <td>
                  <%= link_to "View", transaction_path(transaction), class: "btn btn-sm btn-outline-primary" %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-center">No transactions found for this account.</p>
        <div class="text-center">
          <%= link_to "Add Transaction", new_transaction_path(account_id: @account.id), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
