<!-- app/views/integrations/index.html.erb -->
<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Integrations</h1>
  </div>

  <div class="row mb-4">
    <div class="col-md-8">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="mb-4">Available Integrations</h5>

          <div class="list-group">
            <% @available_integrations.each do |provider, details| %>
              <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                  <div class="integration-icon rounded-circle bg-light p-3 me-3">
                    <i class="bi <%= details[:icon] %> fs-4"></i>
                  </div>
                  <div>
                    <h6 class="mb-1"><%= details[:name] %></h6>
                    <p class="mb-0 text-muted small"><%= details[:description] %></p>
                  </div>
                </div>

                <% if details[:connected] %>
                  <div class="d-flex align-items-center">
                    <span class="badge bg-success me-2">Connected</span>
                    <%= link_to send("#{provider}_integrations_path"), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-gear"></i> Manage
                    <% end %>
                  </div>
                <% else %>
                  <%= link_to new_integration_path(provider: provider), class: "btn btn-primary" do %>
                    <i class="bi bi-plus-circle"></i> Connect
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="mb-3">Why Connect?</h5>

          <div class="mb-4">
            <h6><i class="bi bi-credit-card-2-front text-primary me-2"></i> Accept Payments</h6>
            <p class="text-muted small">Connect Stripe to send professional invoices and get paid online.</p>
          </div>

          <div class="mb-4">
            <h6><i class="bi bi-bank text-primary me-2"></i> Sync Transactions</h6>
            <p class="text-muted small">Connect your bank accounts to automatically import transactions.</p>
          </div>

          <div class="mb-4">
            <h6><i class="bi bi-arrow-repeat text-primary me-2"></i> Automate Bookkeeping</h6>
            <p class="text-muted small">Integrate with accounting software to keep everything in sync.</p>
          </div>

          <div>
            <h6><i class="bi bi-shield-check text-primary me-2"></i> Secure & Private</h6>
            <p class="text-muted small">All your connection credentials are encrypted and securely stored.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if @integrations.any? %>
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <h5 class="mb-4">Connected Services</h5>

        <div class="table-responsive">
          <table class="table">
            <thead>
            <tr>
              <th>Service</th>
              <th>Status</th>
              <th>Connected Since</th>
              <th>Last Used</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% @integrations.each do |integration| %>
              <tr>
                <td>
                  <div class="d-flex align-items-center">
                    <div class="integration-icon rounded-circle bg-light p-2 me-2">
                      <i class="bi <%= @available_integrations[integration.provider.to_sym][:icon] %> fs-5"></i>
                    </div>
                    <%= integration.provider.titleize %>
                  </div>
                </td>
                <td>
                  <% if integration.active? %>
                    <span class="badge bg-success">Active</span>
                  <% else %>
                    <span class="badge bg-warning">Inactive</span>
                  <% end %>
                </td>
                <td><%= integration.connected_at&.strftime("%b %d, %Y") %></td>
                <td><%= integration.last_used_at&.strftime("%b %d, %Y") || "Never" %></td>
                <td>
                  <div class="btn-group">
                    <%= link_to send("#{integration.provider}_integrations_path"), class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-gear"></i> Manage
                    <% end %>

                    <%= button_to integration_path(integration), method: :delete, data: { confirm: "Are you sure you want to disconnect from #{integration.provider.titleize}?" }, class: "btn btn-sm btn-outline-danger" do %>
                      <i class="bi bi-x-circle"></i> Disconnect
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
    .integration-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>