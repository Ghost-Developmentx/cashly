<!-- app/views/layouts/invoice_preview.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Invoice Preview</title>

  <!-- Keep Bootstrap Icons since they're used across the app -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

  <!-- Include Tailwind styles -->
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>

  <style>
      @media print {
          body {
              @apply bg-white p-0;
          }

          .invoice-container {
              @apply shadow-none m-0 max-w-none p-0;
          }
      }
  </style>
</head>
<body class="bg-gray-100 m-0 p-5">
<div class="invoice-container bg-white shadow-lg mx-auto max-w-[210mm] p-8 rounded-lg">
  <%= yield %>
</div>
</body>
</html>