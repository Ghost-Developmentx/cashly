<tr>
  <td class="px-6 py-4">
    <%= f.collection_select :ledger_account_id, LedgerAccount.active.order(:code), :id, :full_name,
                            { include_blank: "Select account" },
                            class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </td>
  <td class="px-6 py-4">
    <%= f.text_field :description, class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </td>
  <td class="px-6 py-4">
    <%= f.number_field :debit_amount, step: "0.01", min: "0", value: (f.object.try(:debit_amount) || 0.0),
                       class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </td>
  <td class="px-6 py-4">
    <%= f.number_field :credit_amount, step: "0.01", min: "0", value: (f.object.try(:credit_amount) || 0.0),
                       class: "block w-full rounded-md border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
  </td>
  <td class="px-6 py-4">
    <button type="button" class="remove-line text-red-600 hover:text-red-900">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
      </svg>
    </button>
    <%= f.hidden_field :_destroy %>
  </td>
</tr>