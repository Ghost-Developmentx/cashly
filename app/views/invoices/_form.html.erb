<!-- app/views/invoices/_form.html.erb -->
<div data-controller="invoice-preview">
  <%= form_with(model: @invoice, local: true, html: { class: "invoice-form" }) do |form| %>
    <% if @invoice.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h4>
        <ul>
          <% @invoice.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row g-4">
      <!-- Left column - Invoice details -->
      <div class="col-md-5">
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white py-3">
            <h5 class="mb-0">Client Information</h5>
          </div>
          <div class="card-body pb-0">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :client_name, class: "form-label required" %>
                <%= form.text_field :client_name, class: "form-control", required: true,
                                    placeholder: "Business or client name",
                                    data: { invoice_preview_target: "clientName" } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :client_email, class: "form-label required" %>
                <%= form.email_field :client_email, class: "form-control", required: true,
                                     placeholder: "client@example.com",
                                     data: { invoice_preview_target: "clientEmail" } %>
                <div class="form-text">Invoice will be sent to this email address</div>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :client_address, class: "form-label" %>
              <%= form.text_area :client_address, class: "form-control", rows: 3,
                                 placeholder: "Street address, city, state, zip code, country",
                                 data: { invoice_preview_target: "clientAddress" } %>
            </div>
          </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white">
            <h5 class="mb-0">Company Information</h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <%= form.label :company_name, "Company Name", class: "form-label" %>
              <%= form.text_field :company_name, value: current_user.company_name, class: "form-control",
                                  placeholder: "Your business name",
                                  data: { invoice_preview_target: "companyName" } %>
            </div>

            <div class="mb-3">
              <label class="form-label">Company Logo</label>
              <div class="input-group mb-2">
                <%= form.file_field :logo, accept: "image/*", class: "form-control",
                                    data: { invoice_preview_target: "logoInput",
                                            action: "change->invoice-preview#handleLogoUpload" } %>
              </div>
              <div class="logo-preview-container mt-2">
                <img src="#" alt="Logo preview" class="img-thumbnail d-none" style="max-height: 100px"
                     data-invoice-preview-target="logoPreview">
                <button type="button" class="btn btn-sm btn-outline-danger mt-2 d-none"
                        data-invoice-preview-target="removeLogo"
                        data-action="click->invoice-preview#removeLogo">
                  <i class="bi bi-trash"></i> Remove Logo
                </button>
              </div>
            </div>
          </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white py-3">
            <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Invoice Details</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :amount, "Invoice Amount", class: "form-label required" %>
                <div class="input-group">
                  <span class="input-group-text"><%= form.object.currency.upcase.first(1) %></span>
                  <%= form.number_field :amount, step: 0.01, class: "form-control", required: true,
                                        data: { invoice_preview_target: "amount" } %>
                </div>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :currency, class: "form-label" %>
                <%= form.select :currency,
                                [
                                  ["USD - US Dollar", "usd"],
                                  ["EUR - Euro", "eur"],
                                  ["GBP - British Pound", "gbp"],
                                  ["CAD - Canadian Dollar", "cad"],
                                  ["AUD - Australian Dollar", "aud"],
                                  ["JPY - Japanese Yen", "jpy"]
                                ],
                                {}, class: "form-select", data: { invoice_preview_target: "currency" } %>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <%= form.label :issue_date, class: "form-label required" %>
                <%= form.date_field :issue_date, class: "form-control", required: true,
                                    data: { invoice_preview_target: "issueDate" } %>
              </div>

              <div class="col-md-6 mb-3">
                <%= form.label :due_date, class: "form-label required" %>
                <%= form.date_field :due_date, class: "form-control", required: true,
                                    data: { invoice_preview_target: "dueDate" } %>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 3,
                                 placeholder: "Description of services or products",
                                 data: { invoice_preview_target: "description" } %>
            </div>
          </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white">
            <h5 class="mb-0">Additional Information</h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <%= form.label :notes, "Notes to Client", class: "form-label" %>
              <%= form.text_area :notes, class: "form-control", rows: 3,
                                 placeholder: "Any additional information for your client",
                                 data: { invoice_preview_target: "notes" } %>
            </div>

            <div class="mb-3">
              <%= form.label :terms, "Terms and Conditions", class: "form-label" %>
              <%= form.text_area :terms, class: "form-control", rows: 3,
                                 placeholder: "Payment terms and conditions",
                                 data: { invoice_preview_target: "terms" } %>
            </div>
          </div>
        </div>

        <div class="card border-0 shadow-sm mb-4">
          <div class="card-header bg-white">
            <h5 class="mb-0">Invoice Template</h5>
          </div>
          <div class="card-body">
            <div class="template-selection">
              <% Invoice::TEMPLATES.each do |template_option| %>
                <div class="template-item mb-3">
                  <div class="form-check">
                    <%= form.radio_button :template, template_option,
                                          class: "form-check-input",
                                          data: { invoice_preview_target: "template" },
                                          id: "template_#{template_option}" %>
                    <%= form.label "template_#{template_option}", class: "form-check-label fw-bold" do %>
                      <%= template_option.titleize %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <div class="d-grid gap-2">
          <%= form.submit class: "btn btn-primary btn-lg" %>

          <% if @invoice.new_record? %>
            <%= link_to "Cancel", invoices_path, class: "btn btn-outline-secondary" %>
          <% else %>
            <%= link_to "Cancel", invoice_path(@invoice), class: "btn btn-outline-secondary" %>
          <% end %>
        </div>
      </div>

      <!-- Right column - Live preview -->
      <div class="col-lg-6">
        <div class="card border-0 shadow-sm sticky-top" style="top: 20px;">
          <div class="card-body p-0">
            <iframe data-invoice-preview-target="previewFrame"
                    id="invoicePreview"
                    class="invoice-preview-frame"
                    srcdoc="<div class='text-center p-5'><p class='text-muted'>Loading preview...</p></div>">
            </iframe>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
    .form-label.required:after {
        content: " *";
        color: #dc3545;
        margin-left: 2px;
    }


    .template-preview img {
        max-height: 120px;
        object-fit: cover;
        width: 100%;
    }

    .template-item {
        transition: all 0.2s ease;
    }

    .template-item:hover {
        transform: translateY(-3px);
    }

    .invoice-preview-frame {
        width: 100%;
        height: calc(100vh - 180px);
        min-height: 800px;
        border: none;
        background: white;
    }

    .sticky-top {
        position: sticky;
        top: 20px;
        z-index: 1000;
    }
</style>