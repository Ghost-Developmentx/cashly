<!-- app/views/invoices/_form.html.erb -->
<%= form_with(model: @invoice, local: true, html: { class: "invoice-form" }) do |form| %>
  <% if @invoice.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h4>
      <ul>
        <% @invoice.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <!-- Left column - Invoice details -->
    <div class="col-md-8">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">Client Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :client_name, class: "form-label required" %>
              <%= form.text_field :client_name, class: "form-control", required: true, placeholder: "Business or client name" %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :client_email, class: "form-label required" %>
              <%= form.email_field :client_email, class: "form-control", required: true, placeholder: "client@example.com" %>
              <div class="form-text">Invoice will be sent to this email address</div>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :client_address, class: "form-label" %>
            <%= form.text_area :client_address, class: "form-control", rows: 3, placeholder: "Street address, city, state, zip code, country" %>
          </div>
        </div>
      </div>

      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">Invoice Details</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :amount, "Invoice Amount", class: "form-label required" %>
              <div class="input-group">
                <span class="input-group-text"><%= form.object.currency.upcase.first(1) %></span>
                <%= form.number_field :amount, step: 0.01, class: "form-control", required: true %>
              </div>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :currency, class: "form-label" %>
              <%= form.select :currency,
                              [
                                ["USD - US Dollar", "usd"],
                                ["EUR - Euro", "eur"],
                                ["GBP - British Pound", "gbp"],
                                ["CAD - Canadian Dollar", "cad"],
                                ["AUD - Australian Dollar", "aud"],
                                ["JPY - Japanese Yen", "jpy"]
                              ],
                              {}, class: "form-select" %>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <%= form.label :issue_date, class: "form-label required" %>
              <%= form.date_field :issue_date, class: "form-control", required: true %>
            </div>

            <div class="col-md-6 mb-3">
              <%= form.label :due_date, class: "form-label required" %>
              <%= form.date_field :due_date, class: "form-control", required: true %>
            </div>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 3, placeholder: "Description of services or products" %>
          </div>
        </div>
      </div>

      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">Additional Information</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <%= form.label :notes, "Notes to Client", class: "form-label" %>
            <%= form.text_area :notes, class: "form-control", rows: 3, placeholder: "Any additional information for your client" %>
          </div>

          <div class="mb-3">
            <%= form.label :terms, "Terms and Conditions", class: "form-label" %>
            <%= form.text_area :terms, class: "form-control", rows: 3, placeholder: "Payment terms and conditions" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Right column - Template selection -->
    <div class="col-md-4">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white">
          <h5 class="mb-0">Invoice Template</h5>
        </div>
        <div class="card-body">
          <div class="template-selection">
            <% Invoice::TEMPLATES.each do |template_option| %>
              <div class="template-item mb-3">
                <div class="form-check">
                  <%= form.radio_button :template, template_option, class: "form-check-input", id: "template_#{template_option}" %>
                  <%= form.label "template_#{template_option}", class: "form-check-label fw-bold" do %>
                    <%= template_option.titleize %>
                  <% end %>
                </div>
                <div class="template-preview mt-2">
                  <img src="/assets/invoice_templates/<%= template_option %>.png" alt="<%= template_option %>" class="img-fluid border rounded">
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="d-grid gap-2">
        <%= form.submit class: "btn btn-primary btn-lg" %>

        <% if @invoice.new_record? %>
        <%=  link_to "Cancel", invoices_path, class: "btn btn-outline-secondary"  %>
          <%  else %>
        <%=  link_to "Cancel", invoice_path(@invoice), class: "btn btn-outline-secondary"  %>
        <%  end %>
      </div>
    </div>
  </div>
<% end %>

<style>
    .form-label.required:after {
        content: " *";
        color: red;
    }

    .template-preview img {
        max-height: 120px;
        object-fit: cover;
        width: 100%;
    }

    .template-item {
        transition: all 0.2s ease;
    }

    .template-item:hover {
        transform: translateY(-3px);
    }
</style>