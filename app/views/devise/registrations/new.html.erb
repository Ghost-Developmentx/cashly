<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header text-center mb-4">
      <h1 class="auth-title">Create Your Account</h1>
      <p class="auth-subtitle">Start managing your finances with Cashly</p>
    </div>

    <% if devise_mapping.omniauthable? %>
      <div class="social-auth mb-4">
        <%= button_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-google w-100", data: { turbo: false } do %>
          <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" class="google-icon">
          Sign up with Google
        <% end %>
      </div>

      <div class="divider mb-4">
        <span class="divider-text">or sign up with email</span>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <div class="input-group">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password", placeholder: "Create a password" %>
          <button class="btn btn-outline-secondary" type="button" id="togglePassword">
            <i class="bi bi-eye" id="toggleIcon"></i>
          </button>
        </div>
        <% if @minimum_password_length %>
          <div class="form-text">
            <%= @minimum_password_length %> characters minimum
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your password" %>
      </div>

      <div class="mb-4 form-check">
        <%= check_box_tag :terms_accepted, "1", false, class: "form-check-input", required: true %>
        <%= label_tag :terms_accepted, class: "form-check-label" do %>
          I agree to Cashly's <%= link_to "Terms of Service", "#", class: "text-decoration-none" %> and <%= link_to "Privacy Policy", "#", class: "text-decoration-none" %>
        <% end %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Create account", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="auth-footer text-center mt-4">
      <p>Already have an account? <%= link_to "Sign in", new_session_path(resource_name), class: "text-decoration-none" %></p>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle password visibility
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');
        const toggleIcon = document.getElementById('toggleIcon');

        if (togglePassword && password && toggleIcon) {
            togglePassword.addEventListener('click', function() {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);

                // Toggle icon
                if (type === 'text') {
                    toggleIcon.classList.remove('bi-eye');
                    toggleIcon.classList.add('bi-eye-slash');
                } else {
                    toggleIcon.classList.remove('bi-eye-slash');
                    toggleIcon.classList.add('bi-eye');
                }
            });
        }
    });
</script>
