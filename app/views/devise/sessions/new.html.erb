<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header text-center mb-4">
      <!-- Logo can be added here -->
      <h1 class="auth-title">Welcome Back</h1>
      <p class="auth-subtitle">Sign in to your Cashly account</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <div class="social-auth mb-4">
        <%= button_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-google w-100", data: { turbo: false } do %>
          <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" class="google-icon">
          Sign in with Google
        <% end %>
      </div>

      <div class="divider mb-4">
        <span class="divider-text">or sign in with email</span>
      </div>

      <% if flash[:alert] %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <div class="input-group">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password", placeholder: "Enter your password" %>
          <button class="btn btn-outline-secondary" type="button" id="togglePassword">
            <i class="bi bi-eye" id="toggleIcon"></i>
          </button>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3 form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="mb-4 text-end">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none" %>
      </div>

      <div class="d-grid gap-2">
        <%= f.submit "Sign in", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="auth-footer text-center mt-4">
      <p>Don't have an account yet? <%= link_to "Create an account", new_registration_path(resource_name), class: "text-decoration-none" %></p>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Toggle password visibility
        const togglePassword = document.getElementById('togglePassword');
        const password = document.getElementById('password');
        const toggleIcon = document.getElementById('toggleIcon');

        if (togglePassword && password && toggleIcon) {
            togglePassword.addEventListener('click', function() {
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);

                // Toggle icon
                if (type === 'text') {
                    toggleIcon.classList.remove('bi-eye');
                    toggleIcon.classList.add('bi-eye-slash');
                } else {
                    toggleIcon.classList.remove('bi-eye-slash');
                    toggleIcon.classList.add('bi-eye');
                }
            });
        }
    });
</script>
